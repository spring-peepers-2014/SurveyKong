<div class="container">

  <h1>Kong! Kong! Kong!</h1>

  <div class="login">

    <h2>Sign In</h2>

    <form action="/login" method="post" class="sign">

      <label for="email">Email:</label>
      <input name="signin[email]" id="email" placeholder="dbc@example.com">

      <label for="password">Password:</label>
      <input type="password" name="signin[password]" id="password" placeholder="password">

      <input type="submit" value="Login">

    </form>

    <h2>Sign Up</h2>

    <form action="/user/new" method="post" class="sign">

      <label for="first_name">First Name:</label>
      <input name="signup[first_name]" id="first_name" placeholder="Sahan">

      <label for="last_name">Last Name:</label>
      <input name="signup[last_name]" id="last_name" placeholder="Buck">

      <label for="email">Email:</label>
      <input name="signup[email]" id="email" placeholder="dbc@example.com">

      <label for="password">Password:</label>
      <input type="password" name="signup[password]" id="password" placeholder="no birthday">

      <input type="submit" value="Create an account!">

    </form>
  </div>

</div>
