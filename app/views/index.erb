<div class="container">

  <h1>Kong! Kong! Kong!</h1>

  <div class="login">

    <h2>Sign In</h2>

    <form action="/login" method="post" class="sign">

      <label for="email">Email:</label>
      <input name="email" id="email" placeholder="dbc@example.com">

      <label for="password">Password:</label>
      <input type="password" name="password" id="password" placeholder="password">

      <input type="submit" value="Log in">

    </form>

    <h2>Sign Up</h2>

    <form action="/user/new" method="post" class="sign">

      <label for="first_name">First Name:</label>
      <input name="first_name" id="first_name" placeholder="John">

      <label for="last_name">Last Name:</label>
      <input name="last_name" id="last_name" placeholder="Smith">

      <label for="email">Email:</label>
      <input name="email" id="email" placeholder="dbc@example.com">

      <label for="password">Password:</label>
      <input type="password" name="password" id="password" placeholder="password">

      <input type="submit" value="Create my account!">

    </form>
  </div>
